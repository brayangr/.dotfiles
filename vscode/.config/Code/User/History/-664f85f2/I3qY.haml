= turbo_frame_tag "licenses_table" do
  .table-root
    .table-header.flex-row
      .flex-column
        .col-xs-1
        .col-xs-5
          = render(SortableColumnComponent.new(**sort_salary_payment_drafts_params(I18n.t('views.remunerations.salary_payment_drafts.extra_hours.employee'))))
        .col-xs-5= t('views.commons.rut')
      .col-xs-8
        .col-xs-10
          .col-sm-3= t('views.remunerations.salary_payment_drafts.licenses.days')
          .col-sm-3= t('views.remunerations.salary_payment_drafts.licenses.start_date')
          .col-sm-3= t('views.remunerations.salary_payment_drafts.licenses.end_date')
          .col-sm-3= t('views.remunerations.salary_payment_drafts.licenses.last_salary')
        .col-sm-2= t('views.commons.actions')

    - if @employees.any?
      = render partial: 'async/remunerations/licenses_table_row', collection: @employees, as: :employee
    - else
      %br
        .col-xs-12.alert.table-empty.center= t('views.remunerations.salary_payment_drafts.no_employees')
  = pagy_bootstrap_nav(@pagy_employees).html_safe
