= turbo_frame_tag "worked_days_table" do
  .table-root
    .table-header.flex-row
      .flex-column
        = render(SortableColumnComponent.new(**sort_salary_payment_drafts_params(I18n.t('views.remunerations.salary_payment_drafts.worked_days.employee'))))
      .flex-column= t('views.commons.rut')
      .flex-column
        = t('views.remunerations.salary_payment_drafts.worked_days.total_days')
        %span.fa.fa-info-circle{ title: t('views.remunerations.salary_payment_drafts.worked_days.total_days_tooltip'), data: { toggle: 'tooltip' }, style: 'display: inline-block' }
      .flex-column= t('views.remunerations.salary_payment_drafts.worked_days.total_bono_days')
      .flex-column= t('views.commons.actions')

    - if @employees.any?
      = render partial: 'async/remunerations/worked_days_table_row', collection: @employees, as: :employee
    - else
      %br
        .col-xs-12.alert.table-empty.center= t('views.remunerations.salary_payment_drafts.no_employees')
  = pagy_bootstrap_nav(@pagy_employees).html_safe
